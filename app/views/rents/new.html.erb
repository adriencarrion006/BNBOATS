<div class="confirmation-box col-md-4">
  <div class="row">
    <div class="form-group">
      <h4>Booking boat</h4>
      <br>

      <%= simple_form_for [@boat, @rent] do |f| %>
        <%= f.input :reservation_date_begin, as: :date, html: true %>
        <%= f.input :reservation_date_end, as: :date, html: true  %>
        <%= f.submit "your booking", class: "btn btn-danger form-control" %>
        <br><br>
      <% end %>
    </div>
  </div>
</div>
