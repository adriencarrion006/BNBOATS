
<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Create a new boat</h3>
        <%= simple_form_for @boat do |f| %>
          <%= f.input :description %>
          <%= f.input :picture %>
          <%= f.input :boat_model %>
          <%= f.input :licence %>
          <%= f.input :person_number %>
          <%= f.input :price %>
          <%= f.input :localisation %>
          <%= f.submit class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
